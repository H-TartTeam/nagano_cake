<div class="container">
  <div class="row">
    <div class="col-sm-8 px-sm-0 offset-sm-1">
      <h2>☺︎商品詳細☺︎</h2>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-20 px-sm-0 mx-auto mb-5">
      <table>
        <tr>
          <th>商品画像</th>
          <td>
            <% if @item.image.attached? %>
        <%= image_tag @item.image, style: "max-width: 500px;" %>
      <% else %>
          No image available
      <% end %>
          </td>
        </tr>
        <tr>
          <th>商品名</th>
          <td><%= @item.name %></td>
        </tr>
        <tr>
        </tr>
        <tr>
          <th>商品説明</th>
          <td><%= @item.introduction %></td>
        </tr>
        <tr>
          </tr>
        <tr>
          <th>ジャンル</th>
          <td><%= @item.genre.name %></td>
        </tr>
        <tr>
          </tr>
        <tr>
          <th>税抜価格</th>
          <td><%= @item.price %> 円</td>
        </tr>
        <tr>
          </tr>
        <tr>
          <th>販売ステータス</th>
          <td><%= @item.is_available ? '販売中' : '販売停止中' %></td>
        </tr>
        </tr>
        <tr>
      </table>
      
      <div class="form-action">
        <%= link_to "編集", edit_admin_item_path(@item), class: "btn btn-primary" %>
        <%= link_to "一覧に戻る", admin_items_path, class: "btn btn-secondary" %>
      </div>
    </div>
  </div>
</div>

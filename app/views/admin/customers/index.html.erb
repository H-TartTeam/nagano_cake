<main>

  <h4>会員一覧</h4>

  <tabel>
    <tbody>
      <tr>
        <th>会員ID</th>
        <th>氏名</th>
        <th>メールアドレス</th>
        <th>ステータス</th>
        <th colspan="4"></th>
      </tr>
    </tbody>
    <thead>
      <% @customers.each do |customer| %>
        <tr>
          <td><%= customer.id %></td>
          <td><%= link_to customer.full_name, admin_customer_path(customer.id) %></td>
          <td><%= customer.email %></td>
          <td><%= customer.is_deleted ? '退会' : '有効' %></td>
        </tr>
      <% end %>
    </thead>
  </tabel>

  <%= paginate @customers %>

</main>
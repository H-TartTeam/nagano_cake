<div class="container o-8column">
  <div class="row">
    <h4 class="col-4 text-center" style="background:#EAC7C7"><%= @customer.full_name %>さんの会員詳細</h4>
  </div>
  <table class="table table-borderless" style="width: 60%;">
    <tbody>
      <tr class="row">
        <td class="col-3" style="background-color:lightgray">会員ID</td>
        <td class="col"><%= @customer.id %></td>
        <td></td>
      </tr>

      <tr class="row">
        <td class="col-3" style="background:#EAC7C7">氏名</td>
        <td class="col-2"><%= @customer.last_name %></td>
        <td class="col-2"><%= @customer.first_name %></td>
      </tr>

      <tr class="row">
        <td class="col-3" style="background-color:lightgray">フリガナ</td>
        <td class="col-2"><%= @customer.last_kana_name %></td>
        <td class="col-2"><%= @customer.first_kana_name %></td>
      </tr>

      <tr class="row">
        <td class="col-3" style="background:#EAC7C7">郵便番号</td>
        <td class="col"><%= @customer.postcode %></td>
        <td class="col"></td>
      </tr>

      <tr class="row">
        <td class="col-3" style="background-color:lightgray">住所</td>
        <td class="col"><%= @customer.address %></td>
        <td class="col"></td>
      </tr>

      <tr class="row">
        <td class="col-3" style="background:#EAC7C7">電話番号</td>
        <td class="col"><%= @customer.phone_number %></td>
        <td class="col"></td>
      </tr>

      <tr class="row">
        <td class="col-3" style="background-color:lightgray">メールアドレス</td>
        <td class="col"><%= @customer.email %></td>
        <td class="col"></td>
      </tr>

      <tr class="row">
        <td class="col-3" style="background:#EAC7C7">会員ステータス</td>
        <td class="col"><%= @customer.is_deleted ? '退会' : '有効' %></td>
      </tr>

      <tr class="row">
        <td class="col"></td>
        <td><%= link_to "編集する", edit_admin_customer_path(@customer.id), :class => "btn btn-secondary" %></td>
        <td><%= link_to "注文履歴一覧に戻る", admin_path, :class => "btn btn-secondary" %></td>
      </tr>
    </tbody>
  </table>
</div>


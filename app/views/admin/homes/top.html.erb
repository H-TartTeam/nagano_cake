<html>
  <head>
    <title>注文履歴一覧</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">

<table class="table table-striped table-bordered">
  <thead>

    <tr>
      <th>購入日時</th>
      <th>購入者</th>
      <th>注文個数</th>
      <th>注文ステータス</th>
    </tr>
  </thead>
  <tbody>
    <%= @order.each do |order| %>
      <tr>
        <td><%= order.created_at.strftime("%Y-%m-%d %H:%M:%S") %></td>
        <td><%= order.customer %></td>
        <td><%= order.quantity %></td>
        <td><%= order.status %></td>
      </tr>
    <% end %>
  </tbody>
</table>
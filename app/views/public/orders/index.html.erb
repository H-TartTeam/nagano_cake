<div class="container">

  <h4>注文履歴一覧</h4>
  <div>
    <table class="table">
      <thead>
        <tr>
          <th>注文日</th>
          <th>配送先</th>
          <th>注文商品</th>
          <th>支払金額</th>
          <th>ステータス</th>
          <th>注文詳細</th>
        </tr>
      </thead>

      <% @orders.each do |order| %>
      <tbody>
        <tr>
          <td><%= order.created_at.strftime('%Y/%m/%d') %></td>
          <td>
            〒<%= order.postcode %></br>
            <%= order.address %></br>
            <%= order.name %>
          </td>
          <td>
            <% order.order_items.each do |order_item| %>
            <%= order_item.item.name %>
            <% end %>
          </td>
          <td><%= order.total_amount %></td>
          <td><%= order.status %></td>
          <td><%= link_to "表示する", order_path(order), class: "btn btn-success btn-lg" %></td>
        </tr>

      </tbody>
      <% end %>
    </table>
  </div>
</div>

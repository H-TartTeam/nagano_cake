<div class="container mt-5 mb-5">
  <%= render "customers/shared/error_messages", resource: resource %>
  <div class="row my-3">
    <div class="col-sm-8 px-sm-0 offset-sm-1">
      <h2>新規会員登録</h2>
    </div>
  </div>

<%= form_with model: @customer, url: new_customer_registration_path do |f| %>
  <%#=render "public/shared/error_messages", resource: resource %>
  <div class="row">
    <div class="col-2 offset-md-1"><%= f.label "名前" %></div>
      <div class="col-2 offset-md-1"><%= f.label :last_name, "(姓)" %></div>
      <div class="col-1"><%= f.text_field :last_name, :size => "10", placeholder: "令和"%></div>
    </div>

    <div class="field">
      <%= f.label :first_name, "(名)" %><br />
      <%= f.text_field :first_name %>
    </div>

    <div class="field">
      <%= f.label :last_kana_name, "セイ" %><br />
      <%= f.text_field :last_kana_name %>
    </div>


    <div class="field">
      <%= f.label :first_kana_name, "メイ" %><br />
      <%= f.text_field :first_kana_name %>
    </div>

    <div class="field">
      <%= f.label :email, "メールアドレス" %><br />
      <%= f.email_field :email%>
    </div>



    <div class="field">
      <%= f.label :password, "パスワード" %>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %><br />
      <%= f.password_field :password  %>
    </div>

    <div class="field">
      <%= f.label :password_confirmation, "パスワード(確認用)" %><br />
      <%= f.password_field :password_confirmation %>
    </div>

    <div class="actions">
      <%= f.submit "新規登録" %>
    </div>
  <% end %>

  <%= render "public/shared/links" %>

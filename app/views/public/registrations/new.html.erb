<div class = "container">
  <div class = "row" style = "margin: 10px;">
    <div class = "col text-center">
      <h3 class = "col-4 text-center">新規会員登録</h3>
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%#= render "customer/shared/error_messages", resource: resource %>
      <table class = "table table-borderless">
        <tr class = "row">
          <td class = "col-3">名前</td>
          <td class = "col-1 text-right"><%= f.label :"(姓)" %></td>
          <td class = "col-2 text-left"><%= f.text_field :last_name, placeholder:"山田", autofocus: true, autocomplete: "氏名" %></td>
          <td class = "col-1 text-right"><%= f.label :"(名)" %></td>
          <td class = "col-3 text-left"><%= f.text_field :first_name, placeholder:"花子", autofocus: true, autocomplete: "氏名" %></td>
        </tr>
        <tr class = "row">
          <td class = "col-3">フリガナ</td>
          <td class = "col-1 text-right"><%= f.label :"(セイ)" %></td>
          <td class = "col-2 text-left"><%= f.text_field :last_kana_name, placeholder:"ヤマダ",  autofocus: true, autocomplete: "フリガナ" %></td>
          <td class = "col-1 text-right"><%= f.label :"(メイ)" %></td>
          <td class = "col-3 text-left"><%= f.text_field :first_kana_name, placeholder:"ハナコ", autofocus: true, autocomplete: "フリガナ" %></td>
        </tr>
        <tr class = "row">
          <td class = "col-3"><%= f.label :郵便番号 %></td>
          <td class = "col-1 text-right"></td>
          <td class = "col-2 text-left"><%= f.text_field :postcode, placeholder:"1234567", autofocus: true, autocomplete: "郵便番号" %></td>
          <td></td>
          <td></td>
        </tr>
        <tr class = "row">
          <td class = "col-3"><%= f.label :住所 %></td>
          <td class = "col-1 text-right"></td>
          <td class = "col-2 text-left"><%= f.text_field :address, placeholder:"東京都", autofocus: true, autocomplete: "住所", :size => "53" %></td>
          <td></td>
          <td></td>
        </tr>
        <tr class = "row">
          <td class = "col-3"><%= f.label :電話番号（ハイフンなし） %></td>
          <td class = "col-1 text-right"></td>
          <td class = "col-2 text-left"><%= f.text_field :phone_number, placeholder:"2223222", autofocus: true, autocomplete: "電話番号" %></td>
          <td></td>
          <td></td>
        </tr>
        <tr class = "row">
          <td class = "col-3"><%= f.label :メールアドレス %></td>
          <td class = "col-1 text-right"></td>
          <td class = "col-2 text-left"><%= f.email_field :email, placeholder:"example@com", autofocus: true, autocomplete: "email" %></td>
          <td></td>
          <td></td>
        </tr>
        <tr class = "row">
          <td class = "col-3">
            <%= f.label :パスワード %>
            <% if @minimum_password_length %>
            <span>(<%= @minimum_password_length %>文字以上)</span>
            <% end %>
          </td>
          <td class = "col-1 text-right"></td>
          <td class = "col-2 text-left"><%= f.password_field :password, autocomplete: "new-password" %></td>
          <td></td>
          <td></td>
        </tr>
        <tr class = "row">
          <td class = "col-3"><%= f.label :パスワード（確認用） %></td>
          <td class = "col-1 text-right"></td>
          <td class = "col-2 text-left"><%= f.password_field :password_confirmation, autocomplete: "new-password" %></td>
          <td></td>
          <td></td>
        </tr>
        <tr class = "row">
          <td class = "col-3"></td>
          <td class = "col-1 text-right"></td>
          <td class = "col-2 text-left"><%= f.submit "新規登録", class: "btn btn-success" %></td>
          <% end %>
        </tr>
      </table>

    <div><strong>既に登録済みの方</strong></div>
    <div><%= link_to "こちら", customer_session_path %>からログインしてください。</div>
    </div>
  </div>
</div>

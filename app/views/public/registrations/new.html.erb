<body>
  <main>
    <h2>新規会員登録</h2>

      <%= form_with model: @customer, url: customer_registration_path do |f| %>
      <%#=render "public/shared/error_messages", resource: resource %>


      <table>
          <td>
            <div class="form-group">
        <%= f.label :お名前, class: "brown-border px-3" %>
        <div class="row">
          <%= f.text_field :last_name, placeholder:"姓 例:山田", class: "form-control offset-1 col-5" %>
          <%= f.text_field :first_name, placeholder:"名 例）花子", class: "form-control offset-1 col-5" %>
        </div>

          <div class="row">
          <%= f.text_field :last_kana_name, placeholder:"セイ 例）ヤマダ", class: "form-control offset-1 col-5" %>
          <%= f.text_field :first_kana_name, placeholder:"メイ 例）ハナコ", class: "form-control offset-1 col-5" %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :郵便番号, class: "brown-border px-3" %>
        <%= f.text_field :postcode, placeholder:"例）0608588", class: "form-control offset-1 col-11" %>
      </div>

      <div class="form-group">
        <%= f.label :住所, class: "brown-border px-3" %>
        <%= f.text_field :address, class: "form-control offset-1 col-11" %>
      </div>

      <div class="form-group">
        <%= f.label :電話番号, class: "brown-border px-3" %>
        <%= f.text_field :phone_number, placeholder:"例）0112314111", class: "form-control offset-1 col-11" %>
      </div>

      <div class="form-group">
        <%= f.label :メールアドレス, class: "brown-border px-3" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder:"例）example@mail", class: "form-control offset-1 col-11" %>
      </div>

      <div class="form-group">
        <%= f.label :パスワード, class: "brown-border px-3" %>
        <%= f.password_field :password, placeholder:"最低６文字必要です。", autocomplete: "new-password", class: "form-control offset-1 col-11" %>
      </div>

      <div class="form-group">
        <%= f.label :パスワード確認, class: "brown-border px-3" %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control offset-1 col-11" %>
      </div>

      <div class="row">
        <%= f.submit "会員登録", class: "btn btn-lg btn-danger mx-auto" %>
      </div>

    <% end %>




    <h2>既に登録済みの方</h2>
    　<%= link_to 'こちら', new_customer_session_path %>からログインしてください。
  </main>
</body>


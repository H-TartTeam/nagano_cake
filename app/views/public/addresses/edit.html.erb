<font color="red"><%= flash[:alert] %></font>

<div class="container">
  <div class="row" style="margin: 10px;">
    <div class="col text-center">
      <h3 class="col-4 text-center">配送先編集</h3>

      <div class="row">
        <div class="col-md-10">
          <%= form_with url: address_path, model: @shopping_address, local: true do |f| %>
            <table class="table table-borderless">
              <tbody>
                <tr>
                  <td>郵便番号(ハイフンなし)</td>
                  <td><%= f.text_field :postcode %></td>
                </tr>
                <tr>
                  <td>住所</td>
                  <td><%= f.text_field :address, size: "50" %></td>
                </tr>
                <tr>
                  <td>宛名</td>
                  <td><%= f.text_field :name %></td>
                </tr>
                <tr>
                  <td><%= link_to "一覧に戻る", addresses_path, class: "btn btn-secondary" %></td>
                  <td><%= f.submit "更新する", class: "btn btn-secondary px-5" %></td>
                </tr>
              </tbody>
            </table>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

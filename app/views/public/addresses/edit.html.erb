<font color = "red"><%= flash[:alert] %></font>

<div class="container">
<h2>配送先編集</h2>
<%= form_with url:address_path, model: @shopping_address, local:true do |f| %>
<table class="table table-borderless">
    <tr>
      <td>郵便番号(ハイフンなし)</td>
      <td><%= f.text_field :postcode %></td>
    </tr>
    <tr>
      <td>住所</td>
      <td><%= f.text_field :address, :size => "40" %></td>
    </tr>
    <tr>
        <td>宛名</td>
        <td><%= f.text_field:name %></td>

    </tr>
    <tr>
      <td><%= link_to "一覧に戻る", addresses_path, class: "btn btn-secondary" %></td>
      <td><%= f.submit "更新する", class: "btn btn-secondary px-5" %></td>
    </tr>
</table>
<% end %>
</div>
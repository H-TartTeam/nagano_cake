<!--マイページ-->
<div class="container">
  <div class="row">
    <div class="col">

      <div style="text-align: center">
        <h3><b><%= @customer.last_name+@customer.first_name %>さんのマイページ</b></h3>
      </div>
        <div class="d-flex align-items-center">
          <h3><b>登録情報</b></h3>
        <%= link_to "編集する", edit_customers_path, class:"btn btn-success ml-3" %>
                </div>
                  <table class="table table-bordered">
                    <tr>
                      <td class="bg-white">氏名</td>
                      <td><%= @customer.last_name+@customer.first_name %></td>
                    </tr>

                    <tr>
                      <td class="bg-white">カナ</td>
                      <td><%= @customer.last_kana_name+@customer.first_kana_name %></td>
                    </tr>

                    <tr>
                      <td class="bg-white">郵便番号</td>
                      <td><%= @customer.postcode %></td>
                    </tr>
                     <tr>
                      <td class="bg-whitet">住所</td>
                      <td><%= @customer.address %></td>
                    </tr>

                    <tr>
                      <td class="bg-white">電話番号</td>
                      <td><%= @customer.phone_number %></td>
                    </tr>

                    <tr>
                      <td class="bg-white">メールアドレス</td>
                      <td><%= @customer.email %></td>
                    </tr>
                  </table>

                  <h3><b>配送先</b></h3>
                    <div class="col-md-4">
                    <%= link_to "一覧を見る", "#", class:"btn btn-primary ml-3 mb-4" %>
                  </div>

                  <h3><b>注文履歴</b></h3>
                    <div class="col-md-4">
                    <%= link_to "一覧を見る", "#", class:"btn btn-primary ml-3 mb-4" %>
                  </div>
            </div>
          </div>
        </div>


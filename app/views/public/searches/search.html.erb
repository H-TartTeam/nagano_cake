<div class="container">
  <div class="row">
    <table class="table border table-hover table-inverse">
      <% if @result == [] %>
        <h3 class="mt-3 text-center">検索結果がありません。</h3>
      <% elsif @item.present? %>
        <h2 class="mt-3">検索結果 "<%= @word %>"</h2>
        <thead>
          <tr>
            <th>image</th>
            <th>name</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <% @item.each do |f| %>
            <td><%= image_tag f.get_item_image, size: "248x200", class: "image" %></td>
            <td><%= link_to f.name, item_path(f.id) %></td>
            <td>￥<%= f.taxin_price.to_s(:delimited) %></td>
          </tr>
          <% end %>
        </tbody>
      <% else %>
        <h3 class="mt-3 text-center">検索結果がありません。</h3>
      <% end %>
    </table>
  </div>
</div>

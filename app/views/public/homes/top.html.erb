<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script>
  $(document).ready(function() {

      .slide-item {
        position: absolute; /* 要素の位置を絶対位置で指定 */
        top: 0; /* 上端に配置 */
        left: 0; /* 左端に配置 */
        width: 100%;
        height: 100%;
        display: none; /* 最初は非表示 */
      }
    </style>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
      $(document).ready(function() {

        $('.slide-item').hide();
        $('.slide-item:first').show();

        setInterval(function() {
          var currentSlide = $('.slide-item:visible');
          var nextSlide = currentSlide.next('.slide-item');

          if (nextSlide.length === 0) {
            nextSlide = $('.slide-item:first');
          }

          currentSlide.fadeOut(500);//写真のサイズ
          nextSlide.fadeIn(500);//写真のサイズ
        }, 3000); // 3秒ごとにスライドを切り替え
      });
    </script>

<div class="slide">
  

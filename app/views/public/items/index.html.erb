<div class="container">
  <h4 class = "col-3 text-center" style = "background-color:lightgray">商品一覧 (全<%= @items.count %>件)</h4>

      <div class="d-flex flex-wrap">
          <% @items.each do |item| %>
          <div class="col-md-3">
            <div class="card">
            <div class="col-xs-3" style="padding-right: 0px; padding-left: 0px;">
                    <%= link_to item_path(item.id) ,style: "color: black;", data: {"turbolinks" => false} do %>
                      

                      <!--%= attachment_image_tag item, :image, format: 'jpeg', size: "248x200"%><br>-->
                        <%= image_tag item_image.get_item_image(248,200) %>
                        <%= item.name %><br>
                        <!--¥%= (@item.price * 1.1).round %>-->
                      <% end %>
                  </div>
            </div>
            </div>
          <% end %>
      </div>
  </div>
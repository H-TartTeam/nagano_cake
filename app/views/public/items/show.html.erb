<div class="container">
  <div class="row">
    <%= render 'genre_search', genres:Genre.all%>
 </div>
</div>
  </div>
  <div class="row">
    <div class="col-sm-20 px-sm-0 mx-auto mb-5">
      
      <% if @item.image.attached? %>
        <%= image_tag @item.image, style: "max-width: 700px;" %>
      <% else %>
          No image available
      <% end %>
       <h2><%= @item.name %>♡</h2>
      <table>
          <tr>
          <td>商品説明</td>
          <td><%= @item.introduction %></td>
        </tr>
        <tr>
          <td>ジャンル</td>
          <td><%= @item.genre.name %></td>
        </tr>
        <tr>
          <td>税込価格</td>
          <td>¥<%= (@item.price * 1.1).round %></td>
        </tr>
        
      </table>
      
      <div class="form-action">
       <%= link_to "Back", items_path, class: "btn btn-secondary", style: "background-color: #dc8ba7;" %>
      </div>
    </div>
  </div>
</div>
